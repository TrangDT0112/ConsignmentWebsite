@model IEnumerable<ConsignmentWebsite.Models.EF.Category>

@if (Model != null && Model.Any())
{
    <ul class="navbar user-menu">
        @foreach (var item in Model)
        {
            string url;

            if (item.Title.Equals("homepage", StringComparison.OrdinalIgnoreCase))
            {
                url = "/";
            }
            else if (!string.IsNullOrEmpty(item.Link))
            {
                url = "/" + item.Link;
            }
            else
            {
                url = "/" + item.Title;
            }

            <li style="border-bottom: 4px solid lightgreen; padding-right: 20px;">
                <a href="@url" style="font-weight: bold; font-size: 18px; color: rgb(51, 51, 51);">
                    @item.Title
                </a>
            </li>
        }
    </ul>
}
