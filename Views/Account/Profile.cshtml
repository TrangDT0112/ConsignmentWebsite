@model ConsignmentWebsite.Models.ApplicationUser
@{
    ViewBag.Title = "Profile";
}

<div class="container product_section_container" style="margin-top:150px;">
    <div class="row">
        <div class="col-md-12">
            <h2>Personal information</h2>
        </div>
        <div class="col-md-7">
            @using (Html.BeginForm("PostProfile", "Account"))
            {
                @Html.ValidationSummary(false)
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <label for="exampleInputEmail1">Full Name</label>
                    <input type="text" class="form-control" aria-describedby="emailHelp" name="FullName" value="@Model.Fullname">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Username</label>
                    <input type="text" class="form-control" aria-describedby="emailHelp" name="UserName" value="@Model.UserName" readonly>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Phone</label>
                    <input type="text" class="form-control" aria-describedby="emailHelp" name="Phone" value="@Model.Phone">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Email</label>
                    <input type="text" class="form-control" aria-describedby="emailHelp" name="Email" value="@Model.Email" readonly>
                </div>
                <div class="form-group" style="display: flex; justify-content: center;">
                    <button type="submit" class="btn btn-success">Update</button>
                </div>
            }
            </div>
        <div class="col-md-5">
            @Html.Action("Order_history", "Review")
        </div>
    </div>
</div>

