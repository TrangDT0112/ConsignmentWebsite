@{
    ViewBag.Title = "Forgot Password Confirmation";
}
<style>
    .news_section_container {
        margin-top: 180px;
    }

    .row-item-new {
        margin-bottom: 20px;
    }

    .title-news {
        font-size: 24px;
        border-bottom: 1px solid;
        padding: 15px 0;
        margin-bottom: 25px;
    }

    .img-box img {
        max-width: 100%;
        max-height: 100%;
    }
</style>
<div class="container news_section_container" style="margin-top:150px;">
    <div class="row">
        <div class="col-md-12">
            <h1 class="title-news">@ViewBag.Title.</h1>
            <p>
                Please check your email to reset your password.
            </p>
        </div>
    </div>
</div>


