@model PagedList.PagedList<ConsignmentWebsite.Models.Wishlist>
@using PagedList.Mvc;
@using PagedList;
@{
    ViewBag.Title = "Index";
}
<!-- Slider -->
<style>

    .news_section_container {
        margin-top: 180px;
    }

    .row-item-new {
        margin-bottom: 20px;
    }

    .title-news {
        font-size: 20px;
        border-bottom: 1px solid;
        padding: 15px 0;
        margin-bottom: 25px;
    }

    .img-box img {
        max-width: 100%;
        max-height: 100%;
    }

    a {
        color: black;
    }
</style>
<div class="container news_section_container">
    <div class="row">
        <div class="col-md-12">
            <h1 class="title-news">Favorite product</h1>
        </div>
    </div>
    @if (Model != null && Model.Any())
    {
        foreach (var item in Model)
        {
<div class="row row-item-new">
    <div class="col-md-2">
        <div class="img-box">
            <a href="" title="@item.Product.Title"><img src="@item.Product.Image" alt="@item.Product.Title" /></a>
        </div>
    </div>
    <div class="col-md-9">
        <div class="content-box">
            <h3><a href="news/@item.Product.Title/@item.ProductId" title="@item.Product.Title">@item.Product.Title</a></h3>
            <div class="description-box">
                @item.Product.Description
            </div>
        </div>
    </div>
    <div class=""col-md-1">
        <a href="#" data-id="@item.ProductId" class="btn btn-danger">Delete</a>
    </div>
</div>
        }
        <div class="row">
            <div class="col-6"></div>
            <div class="col-6" style="text-align:right;">
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
            </div>
        </div>
    }

</div>

