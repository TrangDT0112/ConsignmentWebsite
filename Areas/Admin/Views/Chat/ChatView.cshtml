@{
    ViewBag.Title = "ChatView";
}
<style>
    .chat-layout {
        display: flex;
        height: 80vh;
        border: 1px solid #ccc;
        background-color: #f0f2f5;
    }

    .sidebar {
        width: 250px;
        min-width: 250px;
        background-color: #ffffff;
        border-right: 1px solid #ddd;
        padding: 10px;
        overflow-y: auto;
    }

        .sidebar h4 {
            font-weight: bold;
            margin-bottom: 15px;
        }

    .user-item {
        padding: 10px 15px;
        margin-bottom: 10px;
        border-radius: 10px;
        background-color: #f8f9fa;
        cursor: pointer;
        transition: background-color 0.2s ease;
    }

        .user-item:hover {
            background-color: #e9ecef;
        }

        .user-item.active {
            background-color: #cce5ff;
        }

    .chat-container {
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        padding: 15px;
        overflow-y: auto;
    }

    .messages {
        flex-grow: 1;
        overflow-y: auto;
        display: flex;
        flex-direction: column;
    }

    .message-bubble {
        max-width: 70%;
        padding: 12px 16px;
        margin: 8px 0;
        border-radius: 20px;
        position: relative;
        word-wrap: break-word;
        line-height: 1.4;
        font-size: 15px;
    }

        .message-bubble.admin {
            align-self: flex-end;
            background-color: #d1ecf1;
            border-bottom-right-radius: 0;
        }

        .message-bubble.user {
            align-self: flex-start;
            background-color: #ffffff;
            border: 1px solid #ccc;
            border-bottom-left-radius: 0;
        }

        .message-bubble strong {
            font-weight: 600;
            display: block;
            margin-bottom: 5px;
        }

    .chat-input {
        display: flex;
        border-top: 1px solid #ccc;
        padding: 10px;
        background-color: #fff;
    }

        .chat-input input {
            flex-grow: 1;
            padding: 10px;
            border-radius: 20px;
            border: 1px solid #ccc;
            margin-right: 10px;
        }

        .chat-input button {
            border-radius: 20px;
            padding: 10px 20px;
        }
</style>

<div class="chat-layout">
    <!-- Sidebar -->
    <div class="sidebar">
        <h4>👨‍💼 Customers</h4>
        <div id="userList"></div>
    </div>

    <!-- Chatbox -->
    <div class="chat-container">
        <div id="chatBox" class="messages">
            <div class="text-center text-muted mt-5">Select a customer to start chatting</div>
        </div>

        <div class="chat-input">
            <input type="text" id="messageInput" placeholder="Type your message..." class="form-control" />
            <button class="btn btn-primary" id="sendBtn">Send</button>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        let currentSession = '';
        let currentUser = '';

        function loadSessions() {
            $.get('/Admin/Chat/GetAllChats', function (data) {
                $('#userList').empty();
                data.forEach(s => {
                    $('#userList').append(`<div class="user-item" data-session="${s.SessionId}" data-user="${s.DisplayName}">
                            ${s.DisplayName}
                        </div>`);
                });
            });
        }

        function loadMessages(senderName) {
            $.get('/Admin/Chat/GetMessages?senderName=' + senderName, function (data) {
                $('#chatBox').empty();
                data.forEach(msg => {
                    $('#chatBox').append(`
                            <div class="message-bubble ${msg.Sender === 'Admin' ? 'admin' : 'user'}">
                                <strong>${msg.Sender}</strong>${msg.Message}
                            </div>
                        `);
                });
                $('#chatBox').scrollTop($('#chatBox')[0].scrollHeight);
            });
        }

        $(document).on('click', '.user-item', function () {
            $('.user-item').removeClass('active');
            $(this).addClass('active');

            currentSession = $(this).data('session');
            currentUser = $(this).data('user');

            loadMessages(currentUser);
        });

        $('#sendBtn').on('click', function () {
            const message = $('#messageInput').val();
            if (!message || !currentSession) return;

            $.post('/Admin/Chat/SendMessage', { message, sessionId: currentSession }, function (res) {
                if (res.success) {
                    $('#messageInput').val('');
                    loadMessages(currentUser);
                }
            });
        });

        $(document).ready(function () {
            loadSessions();
        });
    </script>
}
