@model ConsignmentWebsite.Models.EF.ConsignmentOrder
@{
    ViewBag.Title = "Create Consignment Order";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



@section naviheader{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button">
                <i class="fas fa-bars"></i>
            </a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin/Home" class="nav-link">Home</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin/ConsignmentOrder" class="nav-link">Consignment Order</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Create</a>
        </li>
    </ul>
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Create consignment order</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Consignment Order</a></li>
                    <li class="breadcrumb-item active">Create</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Create New Consignment Order</h3>
        </div>
        <div class="card-body">
            <div class="bs-stepper-content">
                @using (Html.BeginForm("Create", "ConsignmentOrder", FormMethod.Post, new { }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <div id="logins-part" class="content active dstepper-block" role="tabpanel" aria-labelledby="logins-part-trigger">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Consignment Code</label>
                            @Html.TextBoxFor(x => x.ConsignmentCode, new { @class = "form-control", @placeholder = "Consignment Code" })
                            @Html.ValidationMessageFor(x => x.ConsignmentCode, null, new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Consignor Name</label>
                            @Html.TextBoxFor(x => x.ConsignorName, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Phone</label>
                            @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Email</label>
                            @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Return Address</label>
                            @Html.TextAreaFor(x => x.ReturnAddress, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Bank Account</label>
                            @Html.TextBoxFor(x => x.BankAccount, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Bank Account Number</label>
                            @Html.TextBoxFor(x => x.BankAccountNumber, new { @class = "form-control" })
                        </div>
                        <button type="submit" class="btn btn-primary">Save</button>
                        <a href="/Admin/ConsignmentOrder" class="btn btn-primary">Back</a>
                    </div>
                }


            </div>
        </div>
    </div>
</section>
@section  scripts{

}


