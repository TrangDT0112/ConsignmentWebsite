@model ConsignmentWebsite.Models.EF.ConsignmentOrder
@{
    ViewBag.Title = "Consignment Order Detail";
}

@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin" class="nav-link">Home</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Order detail</a>
        </li>
    </ul>
}


<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Order detail</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Order code</label>
                        <p class="form-control">@Model.ConsignmentCode</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Consignor name</label>
                        <p class="form-control">@Model.ConsignorName</p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Total Payment</label>
                        <p class="form-control">@ConsignmentWebsite.Common.Common.FormatNumber(Model.TotalAmount, 0)</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Phone</label>
                        <p class="form-control">@Model.Phone</p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Created date</label>
                        <p class="form-control">@Model.CreatedDate.ToString("dd/MM/yyyy")</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Email</label>
                        <p class="form-control">@Model.Email</p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Status</label>
                        <p class="form-control">@(Model.PaymentStatus == 1 ? "Waiting for payment" : "Paid" )</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Return Address</label>
                        <p class="form-control">@Model.ReturnAddress</p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <h3>Product list</h3>
                </div>
                <div class="col-12">
                    @if (Model != null && Model.Id > 0)
                    {
                        @Html.Action("Partial_ConsignmentOrder", "ConsignmentOrder", new { id = Model.Id })
                    }
                    else
                    {
                        <p class="text-danger">Không thể tải danh sách sản phẩm vì thiếu mã đơn hàng.</p>
                    }
                </div>
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">


        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
